<?xml version="1.0" encoding="UTF-8"?>
	<project name="ClosureFXBuilder" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"      
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
		
		<mkdir dir="externalLibs" />
		
		<copy todir="externalLibs">
			<fileset dir="/home/daginno/git/closurefx-builder/libs">
				<filename name="com.digiarea.zippy.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/daginno/git/closurefx-builder/libs">
				<filename name="guava-14.0.1.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/daginno/git/closurefx-builder/libs">
				<filename name="commons-cli-1.2.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/daginno/git/closurefx-builder/libs">
				<filename name="compiler.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/daginno/git/closurefx-builder/libs">
				<filename name="templates-msg.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/daginno/git/closurefx-builder/libs">
				<filename name="stylesheets.jar"/>	
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/daginno/git/closurefx-builder/libs">
				<filename name="templates.jar"/>	
			</fileset>
		</copy>
		
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="/home/daginno/git/closurefx-builder">
				<include name="src/**" />
			</fileset>
		</copy>
		<copy todir="project">
			<fileset dir="/home/daginno/git/closurefx-builder">
				<include name="tests/**" />
			</fileset>
		</copy>
		
		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="templates-msg.jar"/>
				<include name="templates.jar"/>
				<include name="compiler.jar"/>
				<include name="stylesheets.jar"/>
				<include name="guava-14.0.1.jar"/>
				<include name="com.digiarea.zippy.jar"/>
				<include name="commons-cli-1.2.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/tests">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.7" target="1.7" srcdir="build/src" destdir="build/classes" encoding="UTF-8">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
				<filelist>
					<file name="/home/daginno/Java/jdk1.7.0_51/jre/lib/jfxrt.jar"/>
				</filelist>
			</classpath>
		</javac>
		
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/tests">
			<exclude name="**/*.java"/>
		</fileset>
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
		
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
		
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
		
		<jar destfile="dist/libs/ClosureFXBuilder-preloader.jar">
			<fileset dir="build/classes">
				<include name="com/digiarea/closurefx/ClosureFXPreloader.class"/>
			</fileset>
		</jar>
		
		<fx:resources id="appRes">
			<fx:fileset dir="dist" requiredFor="preloader"
				includes="ClosureFXBuilder-preloader.jar"/>
			<fx:fileset dir="dist" includes="ClosureFXBuilder.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources> 
		
		<fx:application id="fxApplication"
			name="Closure FX Builder"
			mainClass="com.digiarea.closurefx.ClosureFX"
			preloaderClass="com.digiarea.closurefx.ClosureFXPreloader"
			toolkit="fx"
		/>
	
		<mkdir dir="build/classes/META-INF" />
		
		
		
		<fx:jar destfile="dist/ClosureFXBuilder.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			<exclude name="com/digiarea/closurefx/ClosureFXPreloader.class" />
			</fileset>
			<fx:resources refid="appRes"/>
			
			<manifest>
				<attribute name="Implementation-Vendor" value="DigiArea, Inc."/>
				<attribute name="Implementation-Title" value="Closure FX Builder"/>
				<attribute name="Implementation-Version" value="1.2.0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
		
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="ClosureFXBuilder" nativeBundles="none"
			updatemode="background" >
	
			<fx:info title="ClosureFXBuilder" vendor="DigiArea, Inc."/>
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
		
		
	</target>
</project>
